@page "{id:min(1)}"
@model IISC.Web.Pages.AddRolesModel
@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header" id="top">
                    <h2 class="pageheader-title">@ViewData["Title"] </h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Home</a></li>
                                <li class="breadcrumb-item"><a asp-page="/Garage/Index" class="breadcrumb-link">Garage Management System</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <form method="post">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-md-5 col-sm-12 col-12">
                    <div class="product-thumbnail">
                        <div class="product-img-head">
                            <div class="product-img">
                                <img src="~/images/add-group.png" alt="" class="img-fluid">
                            </div>
                        </div>
                        <div class="product-content">
                            <div class="product-btn">
                                <a asp-page="/ManageUser" class="btn btn-primary" title="Roles">Manage Users</a>
                                <a asp-page="/ManageRoles" class="btn btn-primary" title="Roles">System Roles</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-9 col-lg-9 col-md-7 col-sm-12 col-12">
                    <div class="influence-profile-content pills-regular">
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-campaign" role="tabpanel" aria-labelledby="pills-campaign-tab">

                                <ul class="nav nav-pills mb-3 nav-justified" id="pills-tab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="pills-campaign-tab" data-toggle="pill" href="#pills-campaign" role="tab" aria-controls="pills-campaign" aria-selected="true">
                                            @ViewData["Title"]
                                        </a>
                                    </li>
                                </ul>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Users.UserId">Username</label>
                                                <input hidden asp-for="Users.ID" />
                                                <input asp-for="Users.UserId" class="form-control" disabled="disabled" placeholder="Enter domain user name" />
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Users.EmailAddress">Email</label>
                                                <input asp-for="Users.EmailAddress" type="email" class="form-control" disabled="disabled" placeholder="Enter user email address" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Users.FirstName">FirstName</label>
                                                <input asp-for="Users.FirstName" class="form-control" disabled="disabled" placeholder="Enter First Name" />
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Users.LastName">LastName</label>
                                                <input asp-for="Users.LastName" class="form-control" disabled="disabled" placeholder="Enter Last Name" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="RoleUser.RoleName">Role</label>
                                                <input hidden asp-for="RoleUser.UserId" />
                                                <select asp-for="RoleUser.RoleName" class="form-control" asp-items="@Model.RolesList">
                                                    @*<option value="0">Choose One</option>*@
                                                </select>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="row mt-2 float-right">
                                            <button type="submit" class="btn btn-outline-primary">Submit</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered first">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Username</th>
                                                        <th>Role</th>
                                                        <th>Role Description</th>
                                                        <th>Module</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.UserRoleList)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <a title="Delete Role" asp-page="/Garage/Logsheet/FuelConsumption" asp-route-ID="@item.ID">
                                                                    <span class="badge-dot badge-danger"></span> Delete Role
                                                                </a>
                                                            </td>
                                                            <td>@item.UserId</td>
                                                            <td>@item.RoleName</td>
                                                            <td>@item.RoleDescription</td>
                                                            <td>@item.Module</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>