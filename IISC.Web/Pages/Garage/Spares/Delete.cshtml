@page "{id:min(1)}"
@model IISC.Web.Pages.Garage.Spares.DeleteModel
@{
    ViewData["Title"] = "Delete Spare";
}

<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header" id="top">
                    <h2 class="pageheader-title">@ViewData["Title"] </h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Home</a></li>
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Garage Management System</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <form method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="mb-0">@ViewData["Title"]</h4>
                        </div>
                        <div class="card-body">
                            <input hidden asp-for="PartsCatalog.ID" />
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Are you sure you want to delete Part *@Model.PartsCatalog.ItemDescription*?</strong>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row mt-2 float-left">
                                <a asp-page="/Garage/Spares/SparesList" class="btn btn-outline-dark">Cancel</a>
                            </div>
                            <div class="row mt-2 float-right">
                                <button type="submit" class="btn btn-outline-danger">Delete Part</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>