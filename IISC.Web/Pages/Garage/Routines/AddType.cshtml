@page
@model IISC.Web.Pages.Garage.Routines.AddTypeModel
@{
    ViewData["Title"] = "Maintenance Type";
}

<div class="row">
    <div class="col-xl-10">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header" id="top">
                    <h2 class="pageheader-title">@ViewData["Title"] </h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Home</a></li>
                                <li class="breadcrumb-item"><a asp-page="/Garage/Index" class="breadcrumb-link">Settings</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="card bg-light mb-3">
                    <div class="card-header">New Maintenance</div>
                    <div class="card-body">
                        <form method="post">
                            <div class="row">
                                <div class="col">
                                    <input asp-for="MaintenanceType.MaintenanceName" class="form-control" placeholder="Enter new maintenance name here" />
                                    <span asp-validation-for="MaintenanceType.MaintenanceName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col">
                                    <button type="submit" class="btn btn-primary float-right">Add New</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                @if (Model.ErrorMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Model.ErrorMessage
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header bg-light">Maintenance List</div>
                    <div class="card-body">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MaintenanceList)
                                {
                                    <tr>
                                        @*<th scope="row">@item.ID</th>*@
                                        <td>@item.ID</td>
                                        <td>@item.MaintenanceName</td>
                                        <td>
                                            <a title="Edit maintenance" asp-page="#" asp-route-ID="@item.ID"
                                               class="btn btn-sm btn-outline-primary m-1">
                                                <i class="far fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a asp-page="/Garage/Index" class="btn btn-outline-dark float-right">Cancel</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- sidenavbar -->
    <div class="col-xl-2 col-lg-2 col-md-6 col-sm-12 col-12">
        <div class="sidebar-nav-fixed">
            <ul class="list-unstyled">
                <li><a href="#overview" class="active">Overview</a></li>
                <li><a href="#top">Back to Top</a></li>
            </ul>
        </div>
    </div>
    <!-- end sidenavbar -->
</div>