@page "{id:min(1)}"
@model IISC.Web.Pages.Garage.Maintain.SpecialToolsModel
@{
    ViewData["Title"] = "Maintenance - Work Order Special Tools";
}

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header" id="top">
                    <h2 class="pageheader-title">@ViewData["Title"] </h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Home</a></li>
                                <li class="breadcrumb-item"><a asp-page="/Garage/Index" class="breadcrumb-link">Garage Management System</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">

            <!-- campaign data -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <!-- campaign tab one -->
                <div class="influence-profile-content pills-regular">
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-campaign" role="tabpanel" aria-labelledby="pills-campaign-tab">

                            <ul class="nav nav-pills mb-3 nav-justified" id="pills-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="pills-campaign-tab" data-toggle="pill" href="#pills-campaign" role="tab" aria-controls="pills-campaign" aria-selected="true">@ViewData["Title"]</a>
                                </li>
                            </ul>
                            <form method="post">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <input hidden asp-for="TrnSpecialTools.MaintenanceID" />
                                                <label asp-for="TrnSpecialTools.Description">Description</label>
                                                <input asp-for="TrnSpecialTools.Description" class="form-control" placeholder="Enter special tool description" />
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="TrnSpecialTools.Location">Location</label>
                                                <input asp-for="TrnSpecialTools.Location" class="form-control" placeholder="Enter special tool location" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="TrnSpecialTools.SpecialInstructions">Special Instructions</label>
                                                <input asp-for="TrnSpecialTools.SpecialInstructions" class="form-control" placeholder="Enter part unit price" />
                                            </div>
                                            <div class="col-md-6 mb-3">

                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="row mt-2 float-left">
                                            <a asp-page="/Garage/Asset/Index" class="btn btn-outline-dark">Cancel</a>
                                        </div>
                                        <div class="row mt-2 float-right">
                                            <button type="submit" class="btn btn-outline-primary">Add Special Tools</button>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered first">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Description</th>
                                                    <th>Location</th>
                                                    <th>Special instruction</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.SpecialToolsList != null)
                                                {
                                                    @foreach (var item in Model.SpecialToolsList)
                                                    {
                                                        <tr>
                                                            <td>@item.ID</td>
                                                            <td>@item.Description</td>
                                                            <td>@item.Location</td>
                                                            <td>@item.SpecialInstructions</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end campaign tab one -->
            </div>
            <!-- end campaign data -->
        </div>


    </div>
</div>