                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered first">
                                            <thead>
                                                <tr>
                                                    <th> </th>
                                                    <th> </th>
                                                    <th>Work Order</th>
                                                    <th>Section</th>
                                                    <th>Priority</th>
                                                    <th>Purpose</th>
                                                    <th>Reason</th>
                                                    <th>Work Description</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.WorkOrderHdrView != null)
                                                {
                                                    @foreach (var item in Model.WorkOrderHdrView)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <a title="Add Maintenance Work Order Parts" asp-page="/Garage/Maintain/WorkOrderParts" asp-route-ID="@item.MaintenanceID">
                                                                    Add Parts
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <a title="Add Maintenance Work Order Special Tools" asp-page="/Garage/Maintain/SpecialTools" asp-route-ID="@item.MaintenanceID">
                                                                    Add Tools
                                                                </a>
                                                            </td>
                                                            <td>@item.ID</td>
                                                            <td>@item.SectionName</td>
                                                            <td>@item.PriorityName</td>
                                                            <td>@item.PurposeDescription</td>
                                                            <td>@item.ReasonOfFailure</td>
                                                            <td>@item.WorkDescription</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
