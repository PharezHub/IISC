@page "{id:min(1)}"
@model IISC.Web.Pages.Garage.Maintain.WorkOrderModel
@{
    ViewData["Title"] = "Maintenance - Work Order";
}

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header" id="top">
                    <h2 class="pageheader-title">@ViewData["Title"] </h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Home</a></li>
                                <li class="breadcrumb-item"><a asp-page="/Garage/Index" class="breadcrumb-link">Garage Management System</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">

            <!-- campaign data -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <!-- campaign tab one -->
                <div class="influence-profile-content pills-regular">
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-campaign" role="tabpanel" aria-labelledby="pills-campaign-tab">

                            <ul class="nav nav-pills mb-3 nav-justified" id="pills-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="pills-campaign-tab" data-toggle="pill" href="#pills-campaign" role="tab" aria-controls="pills-campaign" aria-selected="true">Maintenance - Work Order</a>
                                </li>
                            </ul>
                            <form method="post">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <input hidden asp-for="WorkOrderHdr.MaintenanceID" />
                                                <label asp-for="WorkOrderHdr.SectionID">Section</label>
                                                <select asp-for="WorkOrderHdr.SectionID" class="form-control" asp-items="@Model.SectionList">
                                                    <option value="">Choose One</option>
                                                </select>
                                                <span asp-validation-for="WorkOrderHdr.SectionID" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="WorkOrderHdr.Priority">Priority</label>
                                                <select asp-for="WorkOrderHdr.Priority" class="form-control" asp-items="@Model.PriorityList">
                                                </select>
                                                <span asp-validation-for="WorkOrderHdr.Priority" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="WorkOrderHdr.Purpose">Purpose</label>
                                                <select asp-for="WorkOrderHdr.Purpose" class="form-control" asp-items="@Model.PurposeList">
                                                </select>
                                                <span asp-validation-for="WorkOrderHdr.Purpose" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="WorkOrderHdr.ReasonForFailure">Reason for Failure</label>
                                                <select asp-for="WorkOrderHdr.ReasonForFailure" class="form-control" asp-items="@Model.ReasonList">
                                                </select>
                                                <span asp-validation-for="WorkOrderHdr.ReasonForFailure" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <label asp-for="WorkOrderHdr.WorkDescription">Work Description</label>
                                                <textarea asp-for="WorkOrderHdr.WorkDescription" rows="3" class="form-control" text-wrap:normal" type="text" placeholder="Enter work description"></textarea>
                                                <span asp-validation-for="WorkOrderHdr.WorkDescription" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="row mt-2 float-left">
                                            <a asp-page="/Garage/Asset/Index" class="btn btn-outline-dark">Cancel</a>
                                        </div>
                                        <div class="row mt-2 float-right">
                                            <button type="submit" class="btn btn-outline-primary">Add Work Order</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
