@page
@model IISC.Web.Pages.Garage.Logsheet.UtilizationModel
@{
    ViewData["Title"] = "Utilization";
}

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header" id="top">
            <h2 class="pageheader-title">@ViewData["Title"] </h2>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Home</a></li>
                        <li class="breadcrumb-item"><a asp-page="/Garage/Index" class="breadcrumb-link">Garage Management System</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">@ViewData["Title"]</h5>
        </div>
    </div>
</div>

<div class="row">
    <!-- ============================================================== -->
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
        <div class="card">
            <h5 class="card-header">On-Site</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Reg No</th>
                                <th>Mileage</th>
                                <th>Group</th>
                                <th>Make / Model</th>
                                <th>Status</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OnSiteList)
                            {
                            <tr>
                                <td>@item.RegNo</td>
                                <td>@item.CurrentMileage.ToString("N1")</td>
                                <td>@item.GroupName</td>
                                <td>@item.MakeName / @item.ModelName</td>
                                <td>
                                    @if (@item.StatusID == 1)
                                    {
                                        <span class="badge-dot badge-success mr-1"></span>@item.Status
                                    }
                                    else if (@item.StatusID == 2)
                                    {
                                        <span class="badge-dot badge-brand mr-1"></span>@item.Status
                                    }
                                    else
                                    {
                                        <span class="badge-dot badge-danger mr-1"></span>@item.Status
                                    }
                                </td>
                                <td>
                                    <a title="View asset details" asp-page="/Garage/Logsheet/LoadUtilization" asp-route-ID="@item.ID">
                                        Add
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
        <div class="card">
            <h5 class="card-header">Off-Site</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Reg No</th>
                                <th>Mileage</th>
                                <th>Logged On</th>
                                <th>Category</th>
                                <th>Make/Model</th>
                                <th>Status</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OffSiteList)
                            {
                            <tr>
                                <td>@item.RegNo</td>
                                <td>@item.CurrentMileage.ToString("N1")</td>
                                <td>@item.LoggedOn</td>
                                <td>@item.CategoryName</td>
                                <td>@item.MakeName / @item.ModelName</td>
                                <td>
                                    @if (@item.StatusID == 1)
                                    {
                                        <span class="badge-dot badge-success mr-1"></span>@item.Status
                                    }
                                    else if (@item.StatusID == 2)
                                    {
                                        <span class="badge-dot badge-brand mr-1"></span>@item.Status
                                    }
                                    else
                                    {
                                        <span class="badge-dot badge-danger mr-1"></span>@item.Status
                                    }
                                </td>
                                <td>
                                    <a title="View asset details" asp-page="/Garage/Logsheet/LogView" asp-route-ID="@item.ID">
                                        View
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
</div>