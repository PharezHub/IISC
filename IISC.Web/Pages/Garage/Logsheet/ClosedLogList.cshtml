@page
@model IISC.Web.Pages.Garage.Logsheet.ClosedLogListModel
@{
    ViewData["Title"] = "Approved Logsheet";
}

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header" id="top">
            <h2 class="pageheader-title">@ViewData["Title"] </h2>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Home</a></li>
                        <li class="breadcrumb-item"><a asp-page="/Garage/Index" class="breadcrumb-link">Garage Management System</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">@ViewData["Title"]</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Type</th>
                                <th>Category</th>
                                <th>Reg No</th>
                                <th>Make</th>
                                <th>Model</th>
                                <th>Trigged</th>
                                <th>Previous Value</th>
                                <th>Current Value</th>
                                <th>Created On</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LogSheetList)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.LogType</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.RegNo</td>
                                    <td>@item.Make</td>
                                    <td>@item.ModelName</td>
                                    <td>@item.FrequencyName</td>
                                    <td>@item.PreviousValue</td>
                                    <td>@item.CurrentValue</td>
                                    <td>@item.CreatedOn</td>
                                    <td>
                                        @if (@item.LogStatus == 1)
                                        {
                                            <span class="badge-dot badge-success mr-1"></span>@item.TransStatus
                                        }
                                        else if (@item.LogStatus == 0)
                                        {
                                            <span class="badge-dot badge-brand mr-1"></span>@item.TransStatus
                                        }
                                        else
                                        {
                                            <span class="badge-dot badge-danger mr-1"></span>@item.TransStatus
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>