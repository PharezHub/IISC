@page
@model Garage.Web.Pages.Category.IndexModel
@{
    ViewData["Title"] = "Category";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Settings</a></li>
            <li class="breadcrumb-item active" aria-current="page">Manage Category</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-sm-6">
            <div class="card bg-light mb-3">
                <div class="card-header">New Asset Category</div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col">
                                <input asp-for="Category.CategoryName" class="form-control" placeholder="Enter new asset category name here" />
                                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col">
                                <button type="submit" class="btn btn-primary float-right">Add New</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            @if (Model.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Model.ErrorMessage
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bg-light">Asset Category List</div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                @*<th scope="col">#</th>*@
                                <th scope="col">Category</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CategoryList)
                            {
                                <tr>
                                    @*<th scope="row">@item.ID</th>*@
                                    <td>@item.CategoryName</td>
                                    <td>@item.IsActive</td>
                                    <td>
                                        <a title="Edit asset category" asp-page="/Category/Edit" asp-route-ID="@item.ID"
                                           class="btn btn-sm btn-outline-primary m-1">
                                            <i class="far fa-edit"></i>
                                        </a>
                                        |
                                        <a title="Link asset category to statutory requirement" asp-page="/Category/LinkStatutory" asp-route-ID="@item.ID"
                                           class="btn btn-outline-warning m-1">
                                            <i class="fa fa-link"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a asp-page="/Index" class="btn btn-outline-secondary float-right">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>


