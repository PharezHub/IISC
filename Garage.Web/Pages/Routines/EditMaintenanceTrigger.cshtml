@page "{id:min(1)}"
@model Garage.Web.Pages.Routines.EditMaintenanceTriggerModel
@{
    ViewData["Title"] = "Edit Maintenance Trigger";
}

<div class="container container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Setting</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-sm-6">
            <div class="card bg-light mb-3">
                <div class="card-header">New Trigger</div>
                <div class="card-body">
                    <form method="post">
                        <input hidden asp-for="ManageTrigger.ID" />
                        <input hidden asp-for="ManageTrigger.CreatedOn" />
                        <div class="form-group row">
                            <label asp-for="ManageTrigger.CategoryID" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="ManageTrigger.CategoryID" class="form-control" asp-items="@Model.CategoryList">
                                    <option value="">Choose One</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ManageTrigger.TriggerID" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="ManageTrigger.TriggerID" class="form-control" asp-items="@Model.TriggerList">
                                    <option value="">Choose One</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ManageTrigger.TriggerValue" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="ManageTrigger.TriggerValue" class="form-control" placeholder="Enter trigger value" />
                                <span asp-validation-for="ManageTrigger.TriggerValue" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ManageTrigger.Threshold" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="ManageTrigger.Threshold" class="form-control" placeholder="Enter trigger threshold" />
                                <span asp-validation-for="ManageTrigger.Threshold" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mt-2 float-right">
                            <button type="submit" class="btn btn-primary">Update Trigger</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">

                </div>
            </div>
        </div>
        <div class="col-sm-6">

        </div>
    </div>

</div>
