@page
@model Garage.Web.Pages.Routines.SetupTriggerModel
@{
    ViewData["Title"] = "Maintenance Trigger";
}

<div class="container container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Setting</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-sm-6">
            <div class="card bg-light mb-3">
                <div class="card-header">New Trigger</div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group row">
                            <label asp-for="ManageTrigger.CategoryID" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="ManageTrigger.CategoryID" class="form-control" asp-items="@Model.CategoryList">
                                    <option value="">Choose One</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ManageTrigger.TriggerID" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="ManageTrigger.TriggerID" class="form-control" asp-items="@Model.TriggerList">
                                    <option value="">Choose One</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ManageTrigger.TriggerValue" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="ManageTrigger.TriggerValue" class="form-control" placeholder="Enter trigger value" />
                                <span asp-validation-for="ManageTrigger.TriggerValue" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ManageTrigger.Threshold" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="ManageTrigger.Threshold" class="form-control" placeholder="Enter trigger threshold" />
                                <span asp-validation-for="ManageTrigger.Threshold" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mt-2 float-right">
                            <button type="submit" class="btn btn-primary">Add Trigger</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">

                </div>
            </div>
        </div>
        <div class="col-sm-6">

        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bg-light">Maintenance Trigger List</div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Category</th>
                                <th scope="col">Trigger</th>
                                <th scope="col">Trigger Val</th>
                                <th scope="col">Threshold</th>
                                <th scope="col">Created On</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.MaintenanceTriggerList != null)
                            {
                                foreach (var item in Model.MaintenanceTriggerList)
                                {
                                    <tr>
                                        <th scope="row">@item.ID</th>
                                        <td>@item.CategoryName</td>
                                        <td>@item.TriggerName</td>
                                        <td>@item.TriggerValue.Value.ToString()</td>
                                        <td>@item.Threshold</td>
                                        <td>@item.CreatedOn</td>
                                        <td>
                                            <a title="Edit maintenance trigger" asp-page="/Routines/EditMaintenanceTrigger" asp-route-ID="@item.ID"
                                               class="btn btn-sm btn-outline-primary m-1">
                                                <i class="far fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a asp-page="/Index" class="btn btn-outline-secondary float-right">Cancel</a>
                </div>
            </div>
        </div>
    </div>

</div>
