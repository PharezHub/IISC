@page
@model Garage.Web.Pages.Routines.TriggersModel
@{
    ViewData["Title"] = "Trigger Types";
}

<div class="container container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Setting</a></li>
            <li class="breadcrumb-item active" aria-current="page">Trigger Types</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-sm-6">
            <div class="card bg-light mb-3">
                <div class="card-header">New Trigger</div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <input asp-for="TriggerType.TriggerName" class="form-control" placeholder="Enter trigger name" />
                            <span asp-validation-for="TriggerType.TriggerName" class="text-danger"></span>
                        </div>
                        <div class="row mt-2 float-right">
                            <button type="submit" class="btn btn-primary">Add Trigger</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-6">

        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bg-light">Trigger List</div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Trigger</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.TriggerTypeList)
                            {
                                <tr>
                                    <th scope="row">@item.ID</th>
                                    <td>@item.TriggerName</td>
                                    <td>
                                        <a title="Edit Triggerxxx" asp-page="/Routines/EditTrigger" asp-route-ID="@item.ID"
                                           class="btn btn-sm btn-outline-primary m-1">
                                            <i class="far fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a asp-page="/Index" class="btn btn-outline-secondary float-right">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
